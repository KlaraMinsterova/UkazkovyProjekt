@model BL.DTOs.CompanyDto
@{
    ViewBag.Title = "Index";
}

<h2>Welcome to your profile</h2>
<div style="height: 20px"></div>

<div class="jumbotron">
    <h1>@Model.Name</h1>
    <div style="height: 30px"></div>
    <p><strong>E-mail: </strong>@Model.Email</p>
    <p><strong>Tel.: </strong>@Model.Tel</p>
    <p><strong>Address: </strong>@Model.Address</p>
    <div style="height: 30px"></div>
    <p><input type="button" class="btn btn-primary btn-lg pull-right" value="Edit your profile" onclick="location.href = '@Url.Action("ChangeCompanyInformation", "Company")'" /></p>
    <div style="height: 30px"></div>
</div>